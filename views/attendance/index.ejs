<%- include('../includes/header'); -%>
  <div class="container">

    <div class="row my-4">
      <div class="col-md-8">
        <h2 class="m-0">
          Hello <%= user.name %>
        </h2>
        <p class="m-0 lead">Have a nice day at work ðŸ˜Š</p>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-4">
            <div class="fs-4" id="dateDiv">---</div>
            <div id="timeDiv">---</div>
          </div>
          <div class="col-8 text-md-end">
            <form action="/" class="mb-2" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-primary" <%if (punchedIn) { %> disabled <% } %>>Mark
                  Attendance</button>
            </form>
            <%if (punchedIn) { %>
              <div class="text-muted small">Attendance marked.</div>
              <% } else { %>
                <div class="text-muted small">Can not be changed once marked.</div>
                <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <ul>
          <% attendances.forEach(function(attendance) { %>
            <li>
              <%= attendance.punchedAt.toLocaleString() %>
            </li>
            <% }); %>
        </ul>
      </div>
    </div>

  </div>

  <%- include('../includes/footer'); -%>